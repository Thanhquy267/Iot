<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greydd"
            android:alpha="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_action"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_margin="40dp">

                <RelativeLayout
                    android:id="@+id/rl_progress_root"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_brightness"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_brightness"
                        android:tint="@color/white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_progress"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_above="@id/tv_progress"
                        android:layout_below="@id/iv_brightness"
                        app:cardBackgroundColor="@color/blue31"
                        app:cardCornerRadius="25dp">

                        <RelativeLayout
                            android:id="@+id/rl_progress"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:background="@color/red54">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:cardBackgroundColor="#ffffff"
                                app:cardCornerRadius="2dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:text="123" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@id/rl_progress_root">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_status"
                        style="@style/clickableCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:id="@+id/ll_status"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/blue31"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_light_bulb"
                                android:tint="#ffffff" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="On"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_watt"
                        style="@style/clickableCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/cv_status"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:id="@+id/ll_watt"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/blue31"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_lightning"
                                android:tint="#ffffff" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_watt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="1kw"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/rl_motion"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/cv_status">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_detected"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_baseline_check_24"
                                android:tint="@color/red54"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_motion"
                            style="@style/clickableCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:id="@+id/ll_motion"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@color/blue31"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_motion"
                                    android:tint="#ffffff" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_motion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="On"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_remote"
                        style="@style/clickableCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cv_watt"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@id/rl_motion"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:id="@+id/ll_remote"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/blue31"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_remote"
                                android:tint="#ffffff" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_remote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="On"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_night"
                        style="@style/clickableCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_motion"
                        android:layout_marginTop="30dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:id="@+id/ll_night"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/blue31"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_night"
                                android:tint="#ffffff" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_night"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="On"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_timer"
                        style="@style/clickableCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cv_remote"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_toEndOf="@id/cv_night"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:id="@+id/ll_timer"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/blue31"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_timer"
                                android:tint="#ffffff" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="On"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</layout>